<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" >


            <Button
                android:id="@+id/delet_fascanbutton"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/yetongbutton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_button_selector"
                android:onClick="onclick"
                android:text="发件数据删除" />

            <Button
                android:id="@+id/delet_daoscanbutton"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/delet_fascanbutton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_button_selector"
                android:onClick="onclick"
                android:text="到件数据删除" />

            <Button
                android:id="@+id/delet_jiscanbutton"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/delet_daoscanbutton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_button_selector"
                android:onClick="onclick"
                android:text="集包数据删除" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/delet_back_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_button_selector"
                android:onClick="onclick"
                android:text="返回" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>